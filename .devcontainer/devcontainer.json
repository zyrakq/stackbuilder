{
    "name": "StackBuilder Workspace (Archlinux)",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".",
        "args": {
            "VARIANT": "latest"
        }
    },
    "workspaceFolder": "/workspace/stackbuilder",
    "workspaceMount": "source=stackbuilder-workspace,target=/workspace/stackbuilder,type=volume",
    "mounts": [
        "source=stackbuilder-home,target=/home/vscode,type=volume"
    ],
    "remoteUser": "vscode",
    "runArgs": [
        "--name", "stackbuilder-workspace",
        "--network=stackbuilder-workspace-network"
    
    ],
    "features": {
        "ghcr.io/bartventer/arch-devcontainer-features/common-utils:1": {
            "username": "vscode",
            "additionalPackages": "base-devel,mingw-w64-gcc,aarch64-linux-gnu-gcc,zig",
            "installZsh": true,
            "installOhMyZsh": true,
            "configureZshAsDefaultShell": true
        },
        "ghcr.io/bartventer/arch-devcontainer-features/docker-outside-of-docker:1": {},
        "ghcr.io/zyrakq/arch-devcontainer-features/rust:1": {},
        "ghcr.io/zyrakq/arch-devcontainer-features/clone-repo:1": {
            "repoUrl": "git@github.com:zyrakq/stackbuilder.git",
            "targetDir": "/workspace/stackbuilder"
        }
    },
    "initializeCommand": [
        "bash", "-c", "docker network ls | grep -q stackbuilder-workspace-network || docker network create stackbuilder-workspace-network"
    ],
    "postCreateCommand": [
        "bash",
        "-c",
        "git config --global commit.template /workspace/waybar-market/.gitmessage"
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                // VSCode
                "vscode-icons-team.vscode-icons",
                "aaron-bond.better-comments",
                "davidanson.vscode-markdownlint",
                "IBM.output-colorizer",
                "bierner.markdown-mermaid",
                // Docker
                "ms-azuretools.vscode-docker",
                // Git
                "eamodio.gitlens",
                "codezombiech.gitignore",
                // Rust
                "rust-lang.rust-analyzer",
                "dustypomerleau.rust-syntax",
                "barbosshack.crates-io",
                "jscearcy.rust-doc-viewer",
                "swellaby.vscode-rust-test-adapter",
                // AI Assistant
                "kilocode.kilo-code"
            ],
            "settings": {
                "extensions.autoCheckUpdates": false,
                "extensions.ignoreRecommendations": true,
                "workbench.iconTheme": "vscode-icons",
                "files.associations": {
                    "*.json": "jsonc"
                },
                "editor.formatOnSave": true,
                "kilo-code.allowedCommands": [
                    "git log",
                    "git diff",
                    "git show"
                ]
            }
        }
    }
}
