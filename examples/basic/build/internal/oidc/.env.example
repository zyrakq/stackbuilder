# Generated by stackbuilder from concatenated .env.example files
# Source files: base/.env.example, internal/.env.example, oidc/.env.example

# Base application configuration
APP_NAME=stackbuilder-basic
APP_VERSION=1.0.0
APP_PORT=3000

# Database configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=app_db

# Security settings
SECRET_KEY=your_secret_key_here
# Internal environment configuration
DEBUG=false
LOG_LEVEL=info
ENVIRONMENT=internal

# Internal network settings
INTERNAL_NETWORK=true
EXTERNAL_ACCESS=false

# Database settings for internal use
DB_HOST=internal-db
DB_USER=internal_user
DB_PASSWORD=internal_secure_password

# Monitoring
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30s
# OIDC (OpenID Connect) configuration
OIDC_ENABLED=true
OIDC_PROVIDER_URL=https://your-oidc-provider.com
OIDC_CLIENT_ID=your_client_id
OIDC_CLIENT_SECRET=your_client_secret

# OIDC scopes and claims
OIDC_SCOPES="openid profile email"
OIDC_REDIRECT_URI=https://localhost:3000/auth/callback
OIDC_POST_LOGOUT_REDIRECT_URI=https://localhost:3000

# Token configuration
OIDC_TOKEN_VALIDATION=true
OIDC_TOKEN_CACHE_TTL=300
OIDC_REFRESH_TOKEN_ENABLED=true

# OIDC debugging (override base APP_PORT if needed)
APP_PORT=3000
OIDC_DEBUG_MODE=false