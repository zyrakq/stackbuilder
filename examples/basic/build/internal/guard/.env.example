# Generated by stackbuilder from concatenated .env.example files
# Source files: base/.env.example, internal/.env.example, guard/.env.example

# Base application configuration
APP_NAME=stackbuilder-basic
APP_VERSION=1.0.0
APP_PORT=3000

# Database configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=app_db

# Security settings
SECRET_KEY=your_secret_key_here
# Internal environment configuration
DEBUG=false
LOG_LEVEL=info
ENVIRONMENT=internal

# Internal network settings
INTERNAL_NETWORK=true
EXTERNAL_ACCESS=false

# Database settings for internal use
DB_HOST=internal-db
DB_USER=internal_user
DB_PASSWORD=internal_secure_password

# Monitoring
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30s
# Guard extension configuration
GUARD_ENABLED=true
GUARD_LOG_LEVEL=warn

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST=20

# Security headers
SECURITY_HEADERS_ENABLED=true
CORS_ALLOWED_ORIGINS=https://localhost:3000

# Authentication guard
AUTH_REQUIRED=true
AUTH_TIMEOUT=1800