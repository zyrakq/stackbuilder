# Generated by stackbuilder from multiple .env.example files
# Source files: base/.env.example, production/.env.example, auth/.env.example

# Production environment settings
APP_ENV=production

# Complex application base configuration
APP_NAME=stackbuilder-complex

APP_VERSION=2.0.0

# Authentication extension
AUTH_ENABLED=true

AUTH_PROVIDER=oauth2

AUTH_SESSION_TIMEOUT=3600

CACHE_TTL=7200

CSRF_PROTECTION=true

# Production database (override base settings)
DATABASE_URL=postgresql://prod_user:prod_password@prod-db:5432/complex_prod

DB_POOL_SIZE=20

DB_TIMEOUT=10

DEBUG=false

EMAIL_VERIFICATION_REQUIRED=true

# Performance settings
ENABLE_COMPRESSION=true

JWT_EXPIRY=86400

JWT_REFRESH_ENABLED=true

# JWT settings
JWT_SECRET=your_jwt_secret_key

LOG_FORMAT=json

# Basic logging
LOG_LEVEL=warn

# OAuth2 configuration
OAUTH2_CLIENT_ID=your_oauth2_client_id

OAUTH2_CLIENT_SECRET=your_oauth2_client_secret

OAUTH2_REDIRECT_URL=https://app.example.com/auth/callback

RATE_LIMITING=true

# Production Redis
REDIS_URL=redis://prod-redis:6379/0

# Security settings
SECURE_HEADERS=true

STATIC_FILES_CDN=https://cdn.example.com

# User management
USER_REGISTRATION_ENABLED=true

